{
  "name": "sorting-js",
  "version": "1.0.0",
  "description": "javascript implementation of sorting algorithms",
  "main": "src/app.js",
  "scripts": {
    "test": "jest --coverage",
    "dev": "webpack-dev-server --config webpack.config.js",
    "build": "webpack --config webpack.config.js",
    "build:babel": "rm dist -rf && babel src --out-dir dist --ignore src/**/*.test.js --copy-files",
    "report-cov": "cat ./converage/lcov.info | codecov"
  },
  "keywords": [
    "npm",
    "sorting-js",
    "sorting-algorithms"
  ],
  "author": "Akwan Maroso",
  "license": "MIT",
  "dependencies": {
    "jest": "^26.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.1",
    "@babel/preset-env": "^7.10.4",
    "babel-loader": "^8.1.0",
    "codecov": "^3.7.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
